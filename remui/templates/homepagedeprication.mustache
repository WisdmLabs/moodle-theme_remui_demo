<div class="homepage-dep-warn-container">
    <div class="homepage-dep-top-region d-flex flex-column flex-gap-1d5">
        <h4 class="h-semibold-4 m-0">{{#str}}settingpage-dep-top-st1, theme_remui{{/str}}</h4>
        <p class="p-0 m-0 para-regular-1">
            {{#str}}settingpage-dep-top-st2, theme_remui{{/str}}
        </p>
        {{^showmigratebtn}}
        <p class="para-semibold-1 m-0">
            {{#ispagebuilderavailable}}
                {{#str}}settingpage-dep-top-st3, theme_remui{{/str}}
            {{/ispagebuilderavailable}}
            {{^ispagebuilderavailable}}
                {{#str}}settingpage-dep-top-st4, theme_remui{{/str}}
            {{/ispagebuilderavailable}}
        </p>
        {{/showmigratebtn}}
    </div>
    {{#ispagebuilderavailable}}
    <div class="homepage-dep-bottom-region">
        <div>
            <p class="para-semibold-1 m-0">
                {{^showmigratebtn}}2.{{/showmigratebtn}} {{#str}}settingpagedepbottomst1, theme_remui{{/str}}
            </p>
            <a class = "para-semibold-1" target="_blank" href="https://edwiser.org/documentation/edwiser-remui/edwiser-remui-page-builder-migration-guide/">{{#str}}settingpagedepbottomst2, theme_remui{{/str}}</a>
        </div>
        <div class="bottom-divider-region position-relative">
            <span class="divider-text position-absolute h-bold-5 text-white d-flex justify-content-center align-items-center">{{#str}}settingpagedepbottomst3, theme_remui{{/str}}</span>
            <div class="divicer-line h-100"></div>
        </div>
        <div class="bottom-secondary-region">
                <div>
                    <p class="para-semibold-1 m-0 p-pb-2d5">
                        {{^showmigratebtn}}2.{{/showmigratebtn}} {{#str}}settingpagedepbottomsecondaryst1, theme_remui{{/str}}
                    </p>
                    <a id="homepage-edwpagebuilder-migratorbtn" href="{{#showmigratebtn}}{{wwwroot}}/local/edwiserpagebuilder/homepageimporter/homepage.php?data={{data}}{{/showmigratebtn}}{{^showmigratebtn}}#{{/showmigratebtn}}" {{^showmigratebtn}}style="cursor:not-allowed; pointer-events:initial" {{/showmigratebtn}} class="btn btn-primary {{disablebtn}}" >Migrate homepage design</a>
                    {{^showmigratebtn}}
                    <small class="d-block p-mt-2d5">
                        <span  style="color: #DC3545;">{{#str}}settingpagedepbottomsecondaryst2, theme_remui{{/str}}</span>
                        {{#str}}settingpagedepbottomsecondaryst2b, theme_remui{{/str}}
                    </small>
                    {{/showmigratebtn}}
                </div>
                <div>
                    <div class="p-pb-2d5">
                        <div class="accordion homepage-dep-info-accordion" id="accordion2">
                            <div class="accordion-group">
                                <div class="accordion-heading ">
                                    <div class="d-flex">
                                        <span class="edw-icon edw-icon-Help p-mr-1d5"></span>
                                        <a class="accordion-toggle text-decoration-none  d-flex justify-content-between align-items-center w-100" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                                            <h6 class="h-bold-6 m-0">{{#str}}settingpagedepbottomsecondaryst3, theme_remui{{/str}}</h6>
                                            <span class="edw-icon edw-icon-Down-Arrow arrow-iconspan "></span>
                                            <span class="edw-icon edw-icon-UpArrow arrow-iconspan d-none"></span>
                                        </a>
                                    </div>
                                </div>
                                <div id="collapseOne" class="accordion-body collapse">
                                    <div class="accordion-inner para-regular-1 p-mt-2d5">
                                        {{#str}}settingpagedepbottomsecondaryst4, theme_remui{{/str}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="para-regular-1 m-0 bottom-secondary-region-note">{{#str}}settingpagedepbottomsecondaryst5, theme_remui{{/str}} </p>
                </div>
        </div>
    </div>
    {{/ispagebuilderavailable}}
    {{#comment}}
    <div class="homepage-dep-upgrade-info">
        <span class="upgrade-info-highlighted-content para-regular-1">{{#str}}homepagedrpecationmodalst8,theme_remui{{/str}}</span>
        <a href="https://edwiser.org/my-account/" target="_blank" class="para-semibold-1">{{#str}}upgradeherelinktext,theme_remui{{/str}}</a>
    </div>
    {{/comment}}
</div>
{{#js}}
require(['jquery'], function($){
	$(document).ready(function(){
        $(".homepage-dep-info-accordion .accordion-heading .accordion-toggle").click(function(){
            $(".accordion-heading .edw-icon-Down-Arrow").toggleClass("d-none");
            $(".accordion-heading .edw-icon-UpArrow").toggleClass("d-none");
        });
	});
});
{{/js}}
